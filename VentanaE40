    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        txtlista.setText("");
        txtcantidad.setText("");
    }                                        

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         

        String lista;
        int tamaño;
        tamaño = Integer.parseInt(txtcantidad.getText());
        lista = txtlista.getText();
        String[] numeros = lista.split(",");
        for (int i=0; i<tamaño; i++){
            double raiz, cuadrado, cubo;
            raiz = Math.sqrt(Double.parseDouble(numeros[i]));
            cuadrado = Math.pow(Double.parseDouble(numeros[i]), 2);
            cubo = Math.pow(Double.parseDouble(numeros[i]), 3);
            JOptionPane.showMessageDialog(null, "la raiz del elemento "+(i+1)+" es: "+raiz);
            JOptionPane.showMessageDialog(null, "el cuadarado del elemento "+(i+1)+" es: "+cuadrado);
            JOptionPane.showMessageDialog(null, "el cubo del elemento "+(i+1)+" es: "+cubo);
        }
        
    }                                        

